{% extends 'TiendaBundle::base-public.html.twig' %}

{% block body %}
    
{% if error %}
    <div class="flash-notice">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('login_check') }}" method="post" class="ligthform">
    <fieldset>
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
    <div class="panel panel-info" >
        <div class="panel-heading">
            <div class="panel-title">Ingreso al sistema</div>
        </div>    
        
        <div style="padding-top:30px" class="panel-body" >
        <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input type="text" id="username" name="_username" placeholder="Username" class="form-control" value="{{ last_username }}" />
        </div>
        
        <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        <input type="password" id="password" name="_password" placeholder="Password" class="form-control"/>
        </div>
        
        
        {#
            Redirect on success
            <input type="hidden" name="_target_path" value="/account" />
        #}
                <div style="margin-top:10px" class="form-group">
                    <!-- Button -->
                    <div class="col-sm-12 controls">
                    <input type="submit" value="Ingresar" class="btn btn-success"/>
                    </div>
                </div>
            </div>
                </div>
                </div>
    </fieldset>
</form>

{% endblock %}

